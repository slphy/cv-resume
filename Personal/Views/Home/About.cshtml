            //    };

            //    try {
            //        editAbout(about);
            //    }
            //    catch (error) {
            //        alert("Failed" + error);
            //    }
            //});

            $("#frmAbout").submit(function (e) {
                e.preventDefault();
                var formAction = $(this).attr('action');

                formAction += "?&FirstName=" + $("#txtFirstName").val().trim() +
                    '&LastName=' + $("#txtLastName").val().trim() +
                    '&Status=' + $("#txtStatus").val().trim() +
                    '&Address=' + $('#txtAddress').val().trim();
                window.location.href = formAction;
            });
        });
    </script>
}