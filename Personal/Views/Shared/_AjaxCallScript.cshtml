<script>
    function ajaxGet(url, obj) {
        return $.ajax({
            type: 'GET',
            url: url,
            data: obj,
            success: function (result) {
                return result;
            },
            error: function (result) {
                showOverlaySpinner(false);
                throwServerError();
            }
        });
    }

    function ajaxGet(url, obj, reloadOnError) {
        return $.ajax({
            type: 'GET',
            url: url,
            data: obj,
            success: function (result) {
                return result;
            },
            error: function (result) {
                showOverlaySpinner(false);
                Swal.fire({
                    type: 'error',
                    title: 'Error occured',
                    html: "Error occured, please contact system administrator",
                }).then((res) => {
                    if (reloadOnError) {
                        showOverlaySpinner(true);
                        location.reload();
                    }
                });
            }
        });
    }

    function ajaxGetTraditional(url, obj) {
        return $.ajax({
            type: 'GET',
            url: url,
            data: obj,
            traditional: true,
            success: function (result) {
                return result;
            },
            error: function (result) {
                showOverlaySpinner(false);
                throwServerError();
            }
        });
    }

    function ajaxPost(url, obj) {
